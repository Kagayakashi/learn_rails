<!DOCTYPE html>
<html>
  <head>
    <title>Новый вопрос</title>
  </head>
  <body>
    <h1>Создание вопроса</h1>
    
    <%= form_with scope: :question, url: test_questions_path, local: true do |form| %>
      
      <% if @question.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@question.errors.count, 'ошибка', 'ошибки') %> не позволяет создать вопрос:
          </h2>
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <p>
        <%= form.label :body, 'Наименование' %><br>
        <%= form.text_field :body %>
      </p>

      <p>
        <%= form.submit 'Добавить' %>
      </p>
    <% end %>
    
    <%= link_to 'Назад', test_questions_path %>

  </body>
</html>
