<!DOCTYPE html>
<html>
  <head>
    <title>Изменить ответ</title>
  </head>
  <body>
    <h1>Изменить ответ</h1>
    
    <%= form_with model: @answer, local: true do |form| %>
      
      <% if @answer.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@answer.errors.count, 'ошибка', 'ошибки') %> не позволяет создать вопрос:
          </h2>
          <ul>
            <% @answer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p>
        <%= form.label :body, 'Наименование' %><br>
        <%= form.text_field :body %>
      </p>

      <p>
        <%= form.label :correct, 'Правильный ответ' %><br>
        <%= form.check_box :correct %>
      </p>

      <p>
        <%= form.submit 'Изменить' %>
      </p>
    <% end %>
    
    <%= link_to 'Назад', question_answers_path(@answer) %>

  </body>
</html>
