        <%= link_to t('.admin'), admin_root_path, class: 'nav-link' %>
        <%= link_to t('.gist_list'), admin_gists_path, class: 'nav-link' %>
        <%= link_to t('.reward_list'), admin_rewards_path, class: 'nav-link' %>
      <% end %>

      <li class="nav-item">
        <span class="navbar-text text-info">
          <%= l(Time.current, format: :short) %>
        </span>
      </li>
    </ul>

    <ul class="navbar-nav my-2 my-lg-0">
      <%= render 'shared/auth' %>
    </ul>
  </div>
</nav>
