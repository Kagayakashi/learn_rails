<% if user_signed_in? %>
  <li class="nav-item">
    <span class="navbar-text text-success">
      <%= t('.welcome') %>, <%= current_user.username %>!
    </span>
  </li>
  <li class="nav-item">
    <%= link_to t('.logout'), destroy_user_session_path,
                method: :delete, class: 'nav-link' %>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to t('.sign_in'), new_session_path(resource_name), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to t('.sign_up'), new_registration_path(resource_name), class: 'nav-link' %>
  </li>
<% end %>
